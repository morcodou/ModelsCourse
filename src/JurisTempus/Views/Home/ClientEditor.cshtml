@{
  ViewData["Title"] = "Client Editor";
}

@model ClientViewModel
<div class="row">
  <div class="col-8 offset-2">
    <h3>Client Editor</h3>
    <form method="post">
      <input type="hidden" asp-for="Id" />
      <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
      </div>
      <div class="form-group">
        <label asp-for="ContactName"></label>
        <input class="form-control" asp-for="ContactName" />
      </div>
      <div class="form-group">
        <label asp-for="Phone"></label>
        <input class="form-control" asp-for="Phone" />
      </div>
      <div class="form-group">
        <label asp-for="Address1"></label>
        <input class="form-control" asp-for="Address1" />
      </div>
      <div class="form-group">
        <label asp-for="Address2"></label>
        <input class="form-control" asp-for="Address2" />
      </div>
      <div class="form-group">
        <label asp-for="Address3"></label>
        <input class="form-control" asp-for="Address3" />
      </div>
      <div class="form-group">
        <label asp-for="CityTown"></label>
        <input class="form-control" asp-for="CityTown" />
      </div>
      <div class="form-group">
        <label asp-for="StateProvince"></label>
        <input class="form-control" asp-for="StateProvince" />
      </div>
      <div class="form-group">
        <label asp-for="PostalCode"></label>
        <input class="form-control" asp-for="PostalCode" />
      </div>
      <div class="form-group">
        <label asp-for="Country"></label>
        <input class="form-control" asp-for="Country" />
      </div>    <div class="form-group">
        <a asp-action="Index" class="btn btn-info">Cancel</a>
        <input type="submit" value="Save" class="btn btn-primary" />
      </div>
    </form>
  </div>
</div>
